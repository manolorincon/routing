<div class="container" style="margin: 2px;"> 
  <%= form_with(model: driver, local: true) do |form| %>
    <% if driver.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

        <ul>
          <% driver.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="field">
      <%= form.label :telefono %>
      <%= form.text_field :telefono %>
    </div>

    <div class="field">
      <%= form.label :max_paradas %>
      <%= form.number_field :max_paradas %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>