<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>NÂ° Vehiculo</th>
      <th>Tipo carga</th>
      <th>Capacidad carga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td> <%= vehicle.id %></td>
        <% if vehicle.tipo_carga == 1 %>
            <td>General</td>
        <% elsif vehicle.tipo_carga == 2 %>
            <td>Refrigerada</td>
        <% end %>
        <td><%= vehicle.capacidad_carga %></td>
        <td><%= link_to 'Ver', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

